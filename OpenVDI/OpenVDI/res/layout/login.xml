<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/login_screen"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <fragment
        android:id="@+id/login_header_fragment"
        android:name="com.openvdi.remoteclient.fragments.LoginHeaderFragment"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <fragment
        android:id="@+id/login_body_fragment"
        android:name="com.openvdi.remoteclient.fragments.LoginBodyFragment"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />

</LinearLayout>